<div class="container">
	<h1>Sign Up</h1>
		<%= form_for @user do |f| %>
		<p>
		<%= f.text_field :name, placeholder: "Name" %>	
		</p>
		<p>
		<%= f.email_field :email, placeholder: "Emial" %>	
		</p>
		<p>
		<%= f.password_field :password, placeholder: "Password" %>	
		</p>
		<%= f.submit "Sign Up", class: "btn btn-primary" %>
		<% end %>
</div>