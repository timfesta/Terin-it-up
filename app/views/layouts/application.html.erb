<!DOCTYPE html>
<html>
<head>
	<%= favicon_link_tag 'favicon.png' %>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Vividkick</title>
	<link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,300,800' >
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.6/flatly/bootstrap.min.css">
	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
  	<%= csrf_meta_tags %>	
	
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</head>
<body>
	<nav class="navbar navbar-default navbar-static-top" id="ciabatta">
		<div class="container-fluid" id="thenavbar">
	    	<div class="navbar-header">
	    		<ul class="nav navbar-nav pull-left">
	    			<!-- home -->
	    			<li id="home"><%= link_to "Vividkick", root_path, class: "home" %></li>
	    		</ul>
	    	    <section class="hamburger-button">	
	    		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	    			<span class="icon-bar"></span>
	    			<span class="icon-bar"></span>
	    			<span class="icon-bar"></span>
	    		</button>
	    		</section>	
	    	</div>
	    	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	    		<ul class="nav navbar-nav pull-right">
	    				<li id="hamburger"><%= link_to "Lightroom Presets", templates_path, class: "hamburger" %></li>	
	    			<% if logged_in? %>
						<li id="hamburger"><%= link_to "Profile", profile_path, class: "hamburger" %></li>	
						<li id="hamburger"><%= link_to "Log out", logout_path, class: "hamburger" %></li>								
					<% else %> 
						<li id="hamburger"><%= link_to "Login", login_path, class: "hamburger" %></li>
						<li id="hamburger"><%= link_to "Sign Up", signup_path, class: "hamburger" %></li>
					<% end %>
	    		</ul>
	    	</div>
		</div>
	</nav>

	<%= yield %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	
</body>

<!-- Footer -->
<footer>
	<div class="container">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">	
			</div>
			<div class="col-md-4"></div>
		</div>
			<br>		
		<div class="row">
			<div class="col-md-3">
				<center><%= link_to "Contact Us", contact_path %></center>
			</div>
			<div class="col-md-3">
				<% if current_user %>
					<center><%= link_to "Account", profile_path %></center>
				<% else %>
					<center><%= link_to "Account", root_path %></center>
				<% end %>
			</div>
			<div class="col-md-3">
				<center><%= link_to "About", about_path %></center>
			</div>
			<div class="col-md-3">
				<center><%= link_to "Social Media", socialmedia_path %></center>
					<br>
	                <ul class="social-network social-circle">
		                <center>
		                     <li><a href="https://www.facebook.com/" class="icoFacebook" title="Facebook"><i class="fa fa-facebook"></i></a></li>
		                     <li><a href="https://twitter.com/" class="icoTwitter" title="Twitter"><i class="fa fa-twitter"></i></a></li>
		                     <li><a href="https://www.instagram.com/?hl=en" class="icoInstagram" title="Instagram"><i class="fa fa-instagram"></i></a></li>
		                     <li><a href="https://www.pinterest.com/" class="icoPinterest" title="Pinterest"><i class="fa fa-pinterest"></i></a></li>
		                </center>
	                </ul>		
			</div>
		</div>
	</div>	
</footer>
	<br>
	<br>
	<br>
</html>
