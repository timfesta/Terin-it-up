<!DOCTYPE html>
<html>
<head>
	<%= favicon_link_tag 'favicon.png' %>
  	<title>Vividkick</title>
  	<meta name="viewport" content="width=device-width, initial-scale=1">
  	<%= csrf_meta_tags %>	
	<link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.5/yeti/bootstrap.min.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootswatch/3.3.6/flatly/bootstrap.min.css">
	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
	
	<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
</head>
<body>
	<nav class="navbar navbar-default navbar-static-top">
		<div class="container-fluid">
	    	<div class="navbar-header">
	    		<ul class="nav navbar-nav pull-left">
	    			<!-- home -->
	    			<li><%= link_to "Home", root_path, class: "btn navbar-btn navbar-left btn-primary" %></li>
	    		</ul>
	    	    	
	    		<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	    			<span class="icon-bar"></span>
	    			<span class="icon-bar"></span>
	    			<span class="icon-bar"></span>
	    		</button>	
	    	</div>
	    	<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	    		<ul class="nav navbar-nav pull-right">
	    			<% if logged_in? %>
						<li><%= link_to "Profile", profile_path, class: "btn navbar-btn navbar-right btn-primary" %></li>	
						<li><%= link_to "Log out", logout_path, class: "btn navbar-btn navbar-right btn-primary" %></li>								
					<% else %> 
						<%= link_to "Login", login_path, class: "btn navbar-btn navbar-right btn-primary" %>
						<%= link_to "Sign Up", signup_path, class: "btn navbar-btn navbar-right btn-primary" %>
					<% end %>
	    		</ul>
	    	</div>
		</div>
	</nav> 

	<%= yield %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

</body>
<br>

<!-- Footer -->
<footer>
	<div class="container">
		<div class="row">
			 <div class="col-md-3">
				 <ul>
				 	<center>Customer Service</center>
				 </ul>
			 </div>
			 <div class="col-md-3">
				 <ul>
				 	<center>Info</center>
				 </ul>
			 </div>
			 <div class="col-md-3">
				 <ul>
				 	<center>Info</center>
				 </ul>
			 </div>
			 <div class="col-md-3">
			 	<ul>
			 		<center>Social Media</center>
			 	</ul>
                 <ul class="social-network social-circle">
	                 <center>
	                     <li><a href="https://www.facebook.com/" class="icoFacebook" title="Facebook"><i class="fa fa-facebook"></i></a></li>
	                     <li><a href="https://twitter.com/" class="icoTwitter" title="Twitter"><i class="fa fa-twitter"></i></a></li>
	                     <li><a href="https://www.instagram.com/?hl=en" class="icoInstagram" title="Instagram"><i class="fa fa-instagram"></i></a></li>
	                     <li><a href="https://www.pinterest.com/" class="icoPinterest" title="Pinterest"><i class="fa fa-pinterest"></i></a></li>
	                </center>
                 </ul>				
			</div>
		</div>
	</div>
</footer>
<br>
<br>
<br>
</html>
